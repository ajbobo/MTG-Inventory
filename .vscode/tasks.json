{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build migrator2",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/migrator2/migrator2.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build number_repair",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/number_repair/number_repair.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "build term - debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/term/term.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "clean term - debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/term/term.csproj",
            ],
            "problemMatcher": "$msCompile",
            "group": "none"
        },
        {
            "label": "publish term - release", /* Needs to include Google Firebase creds somehow */
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/term/term.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile",
            "group": "none" 
        }
    ]
}