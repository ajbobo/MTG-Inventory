{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Coverage Report",
            "command": "reportgenerator",
            "type": "process",
            "args": [
                "-reports:${workspaceFolder}/term-test/lcov.info",
                "-targetdir:${workspaceFolder}/term-test/TestCoverage",
                "-reporttypes:Html"
            ],
            "problemMatcher": []
        },
        {
            "label": "View Coverage Report",
            "dependsOn": "Coverage Report",
            "command": "Invoke-Item",
            "type": "shell",
            "args": [
                "${workspaceFolder}/term-test/TestCoverage/index.html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MTG-Inventory.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build term - Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/term/term.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Clean term - Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/term/term.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "none"
        },
        {
            "label": "Publish term - Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/term/term.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile",
            "group": "none"
        }
    ]
}