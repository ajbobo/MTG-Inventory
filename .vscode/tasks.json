{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate API code coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}\\api-test\\api-test.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./TestResults/lcov.info"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Create Term Coverage Report",
            "command": "${userHome}\\.nuget\\packages\\reportgenerator\\5.1.10\\tools\\net6.0\\ReportGenerator.exe",
            "type": "shell",
            "args": [
                "-reports:${workspaceFolder}/term-test/lcov.info",
                "-targetdir:${workspaceFolder}/term-test/TestResults",
                "-reporttypes:Html"
            ],
            "problemMatcher": []
        },
        {
            "label": "View Term Coverage Report",
            "dependsOn": "Create Coverage Report",
            "command": "Invoke-Item",
            "type": "shell",
            "args": [
                "${workspaceFolder}/term-test/TestResults/index.html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MTG-Inventory.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build", 
                "isDefault": true
            }
        },
        {
            "label": "Build term - Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/term/term.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build webapp - debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/webapp/webapp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build firebase-export - Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/firebase-export/firebase-export.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Build API - Debug",
            "command": "dotnet",
            "type": "process",
            "args": [ 
                "build",
                "${workspaceFolder}/api/api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Clean All",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/MTG-Inventory.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": "none"
        }
    ]
}