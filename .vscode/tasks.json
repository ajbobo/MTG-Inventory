{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build term",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/term/term.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "clean term",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/term/term.csproj",
            ],
            "problemMatcher":"$msCompile",
            "group": "none"
        },
        {
            "label": "docker build",
            "type": "docker-build",
            "platform": "netCore",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/term/Dockerfile",
                "tag": "mtg-term",
                "context": "${workspaceFolder}"
            },
            "netCore": {
                "appProject": "${workspaceFolder}/term/term.csproj"
            },
            "group": "build"
        },
        {
            "label": "docker run",
            "type": "docker-run",
            "dockerRun": {
                "image": "mtg-term",
                "remove": false,
            },
            "netCore": {
                "appProject": "${workspaceFolder}/term/term.csproj"
            },
            "dependsOn": ["docker build"],
            "group": "build"
        },
        {
            "label": "build upload-inventory",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/upload-inventory/upload-inventory.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}