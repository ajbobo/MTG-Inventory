{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NG WebUI server",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/ng-web-ui"
        },
        {
            "name": "MAUI App",
            "type": "maui",
            "request": "launch",
            "preLaunchTask": "maui: Build"
        },
        {
            "name": ".NET WebApp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build webapp - debug",
            "program": "${workspaceFolder}/webapp/bin/Debug/net7.0/webapp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/webapp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/webapp/Views"
            }
        },
        {
            "name": "Terminal UI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build term - Debug",
            "program": "${workspaceFolder}/term/bin/Debug/net6.0/term.dll",
            "args": [],
            "cwd": "${workspaceFolder}/term",
            "stopAtEntry": false,
            "console": "externalTerminal",
            "env": {
                "GOOGLE_APPLICATION_CREDENTIALS": "C:\\Dev\\Misc\\MTG-Inventory\\mtg-inventory-main-service-account.json"
            }
        },
        {
            "name": "Firebase Export",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build firebase-export - Debug",
            "program": "${workspaceFolder}/firebase-export/bin/Debug/net7.0/firebase-export.dll",
            "args": [],
            "cwd": "${workspaceFolder}/firebase-export",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "env": {
                "GOOGLE_APPLICATION_CREDENTIALS": "C:\\Dev\\Misc\\MTG-Inventory\\mtg-inventory-main-service-account.json"
            }
        },
        {
            "name": "API Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build API - Debug",
            "program": "${workspaceFolder}/api/bin/Debug/net7.0/api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "React WebUI server",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/react-web-ui",
            "env": {
                "PORT": "3005" // Set the port that Node will use (3000 is the default, but something is using it on my PC)
            }
        }
    ]
}