<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="mauiapp.MainPage"
    xmlns:viewmodel="clr-namespace:mauiapp" x:DataType="viewmodel:MainPageViewModel">

    <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions=".10*, .80*, .10*" Padding="10" RowSpacing="10" ColumnSpacing="10">

        <Image Grid.Row="0" Grid.Column="0" Source="dotnet_bot.png" />
        <Image Grid.Row="0" Grid.Column="2" Source="dotnet_bot.png" />

        <Entry Placeholder="" Grid.Row="1" Grid.ColumnSpan="3" />

        <CollectionView Grid.Row="2" Grid.ColumnSpan="3" ItemsSource="{Binding CardList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:CardData">
                    <Frame >
                        <Grid ColumnSpacing="10" ColumnDefinitions="Auto, *, Auto">
                            <Label Text="{Binding Card.CollectorNumber}" FontSize="24" Grid.Column="0"/>
                            <Label Text="{Binding Card.Name}" FontSize="24" Grid.Column="1"/>
                            <Label Text="{Binding TotalCount}" FontSize="24" Grid.Column="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>

</ContentPage>
